@model IEnumerable<WarehouseApp.Models.Supplier>

@{
    ViewData["Title"] = "Поставщики";
}

<h1>Поставщики</h1>

<p>
    <a asp-action="Create">Добавить нового поставщика</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SupplierId">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.SupplierId">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.SupplierId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
